{
  "name": "bonjinnorenka-ccusage-vscode",
  "displayName": "Bonjinnorenka CCUsage Monitor",
  "description": "Monitor Claude Code 5-hour usage blocks and costs in VSCode status bar",
  "version": "1.1.2",
  "publisher": "bonjinnorenka",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "CCUsage Monitor",
      "properties": {
        "ccusage.updateInterval": {
          "type": "number",
          "default": 30,
          "description": "Update interval in seconds"
        },
        "ccusage.showCost": {
          "type": "boolean",
          "default": true,
          "description": "Show cost in status bar"
        },
        "ccusage.providerMode": {
          "type": "string",
          "enum": [
            "auto",
            "claude",
            "codex",
            "both"
          ],
          "default": "auto",
          "description": "Select which usage providers to display"
        },
        "ccusage.codexDisplayWindow": {
          "type": "string",
          "enum": [
            "auto",
            "5h",
            "weekly",
            "1 week"
          ],
          "default": "auto",
          "description": "Choose which Codex window to show in the status bar (weekly and 1 week are equivalent; auto selects the window with the lowest remaining percentage)"
        },
        "ccusage.codexPercentageMode": {
          "type": "string",
          "enum": [
            "remaining",
            "used"
          ],
          "default": "remaining",
          "description": "Display either the remaining or used percentage for Codex rate limits in the status bar"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "test": "vitest run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bonjinnorenka/ccusage-vscode.git"
  },
  "keywords": [
    "claude",
    "usage",
    "monitor",
    "cost",
    "tracking"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bonjinnorenka/ccusage-vscode/issues"
  },
  "homepage": "https://github.com/bonjinnorenka/ccusage-vscode#readme",
  "devDependencies": {
    "@types/node": "^22.12.0",
    "@types/vscode": "^1.70.0",
    "@vscode/vsce": "^2.21.0",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4"
  }
}
